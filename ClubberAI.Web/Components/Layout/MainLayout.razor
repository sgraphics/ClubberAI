@using System.Numerics
@using System.Reactive.Disposables
@using ClubberAI.ServiceDefaults
@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="page pagedetail@(Page())">
@*     <div class="sidebar">
        <NavMenu />
    </div> *@
    
    <main class="maindetail@(Page())">
	    <div class="top-row px-2">
		    <a href="/" class="logo"><img src="/img/logo.svg" alt="Clubber logo" /></a>
		    <div class="rightdrawer">
			    <ClubberAI.Web.Components.Layout.Radio />
				<Balance />
		    </div>
	    </div>

		<article class="content px-4">
			@Body
		</article>

		<div class="drawer">
			<NavMenu />
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    public string Page()
    {
        return NavManager.Uri.Substring(NavManager.BaseUri.Length - 1).Replace("/", string.Empty);
    }

}
